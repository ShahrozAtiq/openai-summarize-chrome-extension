{
    "manifest_version": 3,
    "name": "Summarize Extension",
    "version": "1.0",
    "description": "A Chrome extension to summarize highlighted text using OpenAI ChatGPT API",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["contextMenus", "scripting", "activeTab"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "background": {
      "service_worker": "background.js"
    }
  }
  